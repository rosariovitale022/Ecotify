<%= simple_form_for([@article, @article.comments.build]) do |f| %>
<div class="field">
  <div class="control"> <%= f.input :name, input_html: {class:'input'}, wrapper:false, label_html: {class:'label'} %>
  </div>
</div>
<div class="field">
  <div class="control">
    <%= f.input :comment, input_html: {class:'textarea'},wrapper: false, label_html: {class: 'label'} %>
  </div>
</div>
<%= f.button :submit, 'Post comment', class: "button is-primary" %>
<% end %>
