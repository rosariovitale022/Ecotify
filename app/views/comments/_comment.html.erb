<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p class="content is-small" style="padding-right: 15px;margin-bottom: 0;float: right;"><strong><%= comment.created_at %></strong></p>
        <p class="content is-medium" style=""><strong><%= comment.name %>: </strong></p>
        <p style="overflow:auto; max-height:400px; text-overflow:ellipsis;white-space: pre-line;"><%= comment.comment %></p>
      </div>
    </div>

    <%= link_to 'Delete', [comment.article, comment], method: :delete, class: "button is-danger is-small", data: {confirm: "Are you sure? "} %>
  </article>
</div>
